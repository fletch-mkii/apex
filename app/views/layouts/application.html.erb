<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "Apex" %></title>

    <%= favicon_link_tag "/assets/star_thumb.png" %>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

  </head>

  <body>
    <img src="/assets/doubleplanet.jpg" class="float-center background-image"/>
    <%= render "layouts/top_bar" %>
    <div class="row">
      <%= render "layouts/flash" %>
      <%= yield %>
    </div>
  </body>
</html>
