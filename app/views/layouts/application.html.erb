<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "Apex" %></title>

    <%= favicon_link_tag "/assets/star_thumb.png" %>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

  </head>

  <body>
    <%if @custom_bg.nil?%>
      <img src="/assets/blue-eclipse.jpg" class="float-center background-image"/>
    <%end%>
    <%= render "layouts/top_bar" %>
    <div class="row">
      <div class="small-12 columns">
        <%= render "layouts/flash" %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
